<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Smoke">

    <listeners>
        <listener class-name="UI.Utils.ScreenShotOnFailListener" />
    </listeners>

    <test name="Login">
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LogOut">
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                    <include name="logOut"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>