<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Smoke" parallel="tests" thread-count="1">

    <listeners>
        <listener class-name="UI.Utils.ScreenShotOnFailListener" />
    </listeners>

    <test name="Login docker-chrome-81">
        <parameter name="browser" value="docker-chrome-81"/>
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Login docker-firefox-78">
        <parameter name="browser" value="docker-firefox-78"/>
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LogOut docker-firefox-77">
        <parameter name="browser" value="docker-firefox-77"/>
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                    <include name="logOut"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LogOut Login docker-chrome-83">
        <parameter name="browser" value="docker-chrome-83"/>
        <classes>
            <class name="UITests.LoginTest">
                <methods>
                    <include name="logIn"/>
                    <include name="logOut"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>